<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pjwin.com.crossprocessclient.MainActivity">

    <TextView
        android:id="@+id/result_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/aidl_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AIDL"
        app:layout_constraintBottom_toTopOf="@+id/result_txt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/messenger_btn" />

    <Button
        android:id="@+id/messenger_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Messenger"
        app:layout_constraintBottom_toTopOf="@+id/result_txt"
        app:layout_constraintLeft_toRightOf="@+id/aidl_btn"
        app:layout_constraintRight_toRightOf="@id/task_btn" />

    <Button
        android:id="@+id/task_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Task"
        app:layout_constraintBottom_toTopOf="@+id/result_txt"
        app:layout_constraintLeft_toRightOf="@+id/messenger_btn"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
